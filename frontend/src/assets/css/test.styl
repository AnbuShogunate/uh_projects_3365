/* sweat alert customization */

.swal2-form {
  text-align left
}
.swal2-modal {
  border-radius: 0
}
/*.swal2-input{
  width: auto !important
}*/
.swal2-button-order-1 { order: 1; }
.swal2-button-order-2 { order: 2; }
.swal2-button-order-3 { order: 3; }

.right-gap {
  margin-right: auto !important
}
.swal2-styled.swal2-editform {
  border: 0
  border-radius: .25em
  background: initial
  background-color: #2778c4
  color: #fff
  font-size: 1em
  float: right
  margin-right: 0
  height: 80%;
}

.form-custom-label {
  display: block;
  line-height: 1.5;
  font-size: 0.9em;
  font-weight: 600;
  margin-bottom: 0.1em;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
}

.form-custom-dropdown {
  //appearance: none;
  border-radius: .3em;
  border: 1px solid #cecece;
  box-sizing: border-box;
  background-color: transparent;
  font-size: .9em;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
  padding: .75em;
  display: block;
  width: 100%;
  font-weight: 400;
  line-height: 1.2em;
  margin: 0;
  padding-right: 2em;
  margin-bottom: 1.5em;
}
.form-custom-dropdown:focus {
  outline: 0;
  border: 1px solid #41b883;
}
.form-custom-dropdown::placeholder {
  color: #a8a8a8;
  line-height: normal;
}
.form-custom-dropdown select[data-placeholder-selected] {
  color: #a8a8a8;
}
.form-custom-dropdown option {
  color: #000000;
}
.form-custom-dropdown option:disabled {
  color: #a8a8a8;
}

  /* Navbar Custom */
.navbar{
  padding: 0 !important
}
.navbar-brand{
  padding-left:1rem
}
.nav-item{
  padding: 1rem 0rem !important
}
.navbar-nav-submenu {
  margin-top: 1rem
  margin-left: -1rem
  background-color: #4a5358
  position:absolute
  opacity:0
  transition:opacity linear 0.15s
  z-index:-1
  padding: 1.5rem 1rem
}
.nav-item-submenu{
  display: block
}
.navbar-nav li:hover .navbar-nav-submenu {
  z-index: 1
  opacity: 1
}
