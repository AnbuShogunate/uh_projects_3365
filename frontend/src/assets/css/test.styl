tr.rowStyle:hover {
  background-color: #8fcfea
}

/* table heading */

.tableHeading{
  display: flex
}
.tableHeading-left{
  flex:70%
}
.tableHeading-right{
  flex:30%
}
.tableHeading-text{
  font-size: 3em
  color: #343a40
}


/* sweat alert customization */

.swal2-modal {
  border-radius: 0
}
.swal2-input{
  width: auto !important
}
.swal2-button-order-1 { order: 1; }
.swal2-button-order-2 { order: 2; }
.swal2-button-order-3 { order: 3; }

.right-gap {
  margin-right: auto !important
}
.swal2-styled.swal2-addnew {
  border: 0
  border-radius: .25em
  background: initial
  background-color: #2778c4
  color: #fff
  font-size: 1em
  float: right
  margin-right: 0
  height: 80%;
}
