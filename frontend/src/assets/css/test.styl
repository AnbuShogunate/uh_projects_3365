/* table heading */

.tableHeading{
  display: flex
}
.tableHeading-left{
  flex:70%
}
.tableHeading-right{
  flex:30%
}
.tableHeading-text{
  font-size: 3em
  color: #343a40
}


/* sweat alert customization */

.swal2-modal {
  border-radius: 0
}
.swal2-input{
  width: auto !important
}
.swal2-button-order-1 { order: 1; }
.swal2-button-order-2 { order: 2; }
.swal2-button-order-3 { order: 3; }

.right-gap {
  margin-right: auto !important
}
.swal2-styled.swal2-addnew {
  border: 0
  border-radius: .25em
  background: initial
  background-color: #2778c4
  color: #fff
  font-size: 1em
  float: right
  margin-right: 0
  height: 80%;
}

  /* Navbar Custom */
.navbar{
  padding: 0 !important
}
.navbar-brand{
  padding-left:1rem
}
.nav-item{
  padding: 1rem 0rem !important
}
.navbar-nav-submenu {
  margin-top: 1rem
  margin-left: -1rem
  background-color: #4a5358
  position:absolute
  opacity:0
  transition:opacity linear 0.15s
  z-index:-1
  padding: 1.5rem 1rem
}
.nav-item-submenu{
  display: block
}
.navbar-nav li:hover .navbar-nav-submenu {
  z-index: 1
  opacity: 1
}
